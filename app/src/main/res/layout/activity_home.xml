<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainViewContainer"
        android:name="com.example.lecoin.fragment.SearchFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/downNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/downNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/HomeTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homePageName" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/AddTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addPageName" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/AccountTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="@string/profilePageName" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/BookmarkTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookmarkPageName" />
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>